<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_margin="10dp">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="395dp"
        android:layout_gravity="center"
        android:columnCount="1"
        android:rowCount="4">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="ホーム" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/button_sudoku_demo_demo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="デモプログラムを開始" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/button_sudoku_train_"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="トレーニングプログラムを開始" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/button_sudoku_original_"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="オリジナルプログラムを開始" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/button_sudoku_quiz"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="数独クイズを開始" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/button_sudoku_maker_profile"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="作成者のプロフィール" />

    </GridLayout>


</LinearLayout>